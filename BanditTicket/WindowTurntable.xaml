<Window x:Class="BanditTicket.WindowTurntable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BanditTicket" AllowsTransparency="True" WindowStyle="None" WindowState="Maximized" Background="White"
        Title="WindowTurntable" Height="900" Width="1400" Loaded="Window_Loaded">
    <Grid>
        <Image x:Name="back" Stretch="Fill"></Image>
        <local:Turntable MouseLeftButtonDown="Turntable_MouseLeftButtonDown" Width="800" Height="800" AwardProcess="Turntable_AwardProcess" />
    </Grid>
</Window>
